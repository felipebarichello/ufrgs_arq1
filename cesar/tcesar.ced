;game_valid_char(char r0) : r1
;Verificar se o caractere em r0 é um caractere válido para a palavra secreta (letra ou hífen).
;Retorna 1 caso seja válido, 0 caso contrário
_game_valid_char:
	;Testar maiúsculas
	cmp r0, #'Z'
	bhi game_valid_char_skip_upper

	cmp r0, #'A'
	bcc game_valid_char_true

	;Testar hífen
	cmp r0, #'-'
	beq game_valid_char_true
	br game_valid_char_false

game_valid_char_skip_upper:
	;Testar minúsculas
	cmp r0, #'a'
	bcs game_valid_char_false

	cmp r0, #'z'
	bhi game_valid_char_false

game_valid_char_true:
	mov #1, r1
	rts r7

game_valid_char_false:
	clr r1
	rts r7


;set_lives(buffer r3)
;Verificar se o buffer cujo endereço inicial está em r3 contém um número de vidas válido.
;Preenche as vidas em `lives` caso seja válido.
;Retorna 1 caso seja válido, 0 caso contrário.
_set_lives:
	mov (r3)+, r4
	beq set_lives_false ;0 dígitos
	mov #2, r5 ;No máximo 2 dígitos

set_lives_loop:
	cmp r4, #'9'
	bhi set_lives_false ;Caractere não é um dígito
	cmp r4, #'0'
	bcs set_lives_false ;Caractere não é um dígito

	;Caractere é um dígito
	;Novo caractere
	mov (r3)+, r4
	beq set_lives_2digits
	sob r5, set_lives_loop
	br set_lives_false ;Mais de 2 dígitos

set_lives_2digits:
	dec r5
	bne set_lives_padding

	;Dois dígitos
	mov -6(r3), lives
	br set_lives_second_digit

set_lives_padding:
	;Um dígito. Adicionar um zero à esquerda
	mov #'0', lives

set_lives_second_digit:
	mov -4(r3), lives+2

	;Verificar se não é 0
	cmp lives+2, #'0'
	bne set_lives_true
	cmp lives, #'0'
	beq set_lives_false

set_lives_true:
	mov #1, r1
	rts r7

set_lives_false:
	clr r1
	rts r7


;game_update_timer()
;Interrupção do timer.
_game_update_timer:
	inc clock
	rts r7


;game_guess()
;Interrupção do teclado.
;Tentativa do jogador de adivinhar uma letra da palavra secreta.
_game_guess:
	mov r0, -(r6) ;Armazenar r0

	mov tecdt, r0

	;Verificar se o caractere é válido
	jsr r7, _game_valid_char
	beq game_guess_invalid ;Branch se caractere é inválido

	;Caractere é válido
	mov r1, -(r6) ;Armazenar r1
	mov r2, -(r6) ;Armazenar r2
	mov r3, -(r6) ;Armazenar r3

	;Converter para maiúsculas
	cmp r0, #'a'
	bcs game_guess_skip_upper ;Não é minúscula. Pular to-upper

	sub #32, r0 ;'A' - 'a' = -32

game_guess_skip_upper:
	;TODO: Verificar se o caractere já foi usado

	mov #secret_word-1, r2
	clr r3 ;r3 é uma flag que indica se o caractere foi encontrado alguma vez

;Verificar se o caractere está contido na palavra secreta
game_guess_loop:
	mov (r2), r1
	and #h00FF, r1 ;Trata apenas o byte menos significativo
	beq game_guess_end ;Termina se for null
	inc r2

	cmp r1, r0 ;Testa se o caractere inserido é igual ao caractere da palavra secreta sendo testado
	bne game_guess_loop ;Se não for, testar o próximo caractere

;Caractere foi encontrado
game_guess_found:
	inc r3 ;Indica que o caractere foi encontrado
	sub #secret_word, r2 ;r2 agora contém o offset do caractere na palavra secreta
	asl r2 ;A palavra secreta é array de bytes, enquanto a palavra secreta escondida é array de words
	mov r0, secret_word_hidden(r2) ;Substituir o caractere na palavra secreta escondida
	br game_guess_loop

game_guess_end:
	mov (r6)+, r3 ;Restaurar r3
	mov (r6)+, r2 ;Restaurar r2
	mov (r6)+, r1 ;Restaurar r1

game_guess_invalid:
	mov (r6)+, r0 ;Restaurar r0
	rts r7


;game_draw()
;Atualizar o display.
_game_draw:
	jsr r7, _stdio_free ;"Limpar" o display sem alterar o conteúdo. É mais otimizado que _stdio_clear.

	mov #secret_word_hidden, r2
	jsr r7, _stdio_print ;Imprimir a palavra secreta à esquerda

	mov #display+27, stdio_cursor
	mov #txt_symbol_heart, r2
	jsr r7, _stdio_print ;Imprimir texto de vidas à direita

	mov #lives, r2 ;Já está em ASCII
	jsr r7, _stdio_print ;Imprimir o número de vidas à direita

	rts r7




