enter_word_loop:
	;Verificar se o caractere é válido
	jsr r7, _game_valid_char
	beq enter_word_invalid

	;É válido. Próximo loop.
	inc r2
	mov (r2), r0
	and #h00FF, r0 ;Trata apenas o byte menos significativo

	;Se chegar no null terminator, a palavra é válida
